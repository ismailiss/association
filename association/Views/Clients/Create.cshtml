@model association.Models.Client

@{
    ViewData["Title"] = "Créer";
}

<h2>Créer</h2>

<h4>Citoyen</h4>
<hr />
        <form asp-action="Create">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nom" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Prenom" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Prenom" class="form-control" />
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CIN" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="CIN" class="form-control" />
                        <span asp-validation-for="CIN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Adresse" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Adresse" class="form-control" />
                        <span asp-validation-for="Adresse" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Association" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="AssociationID" class="form-control" asp-items="ViewBag.Association"></select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
                </div>
        </form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
