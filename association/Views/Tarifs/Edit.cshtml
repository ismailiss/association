@model association.Models.Tarif

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Tarif</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TarifID" />
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateApplication" class="control-label"></label>
                <input asp-for="DateApplication" class="form-control" />
                <span asp-validation-for="DateApplication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinApplication" class="control-label"></label>
                <input asp-for="DateFinApplication" class="form-control" />
                <span asp-validation-for="DateFinApplication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
