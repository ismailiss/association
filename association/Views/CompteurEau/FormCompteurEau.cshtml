@model association.Models.CompteurEau

@*@{ 
    @ViewData["title"] = "Saisie Compteur";
}*@

<div class="panel panel-primary">
    <div class="panel-heading">Saisie d'un produit</div>
    <div class="panel-body">
        <form method="post" asp-action="SaveCompteur">
            <div class="form-group">
                <label class="control-label">Numéro </label>
                <input type="text" name="Numero" class="form-control" value="@Model.Numero" />
                @Html.ValidationMessageFor(c=>c.Numero,"",new  {@class="text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label">Emplacement </label>
                <input type="text" name="Emplacement" class="form-control" value="@Model.Emplacement" />
                @Html.ValidationMessageFor(c => c.Emplacement, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label">Date Debut </label>
                <input type="datetime" name="DateDebut" class="form-control" value="@Model.DateDebut" />
                @Html.ValidationMessageFor(c => c.DateDebut, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="control-label">Client </label>

                <select name="ClientID">
                    @{
                        foreach (var c in ViewBag.clients)
                        {

                            <option value="@c.ClientID">@c.Nom</option>
                        }
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Enregistrer </button>

        </form>
    </div>

</div>